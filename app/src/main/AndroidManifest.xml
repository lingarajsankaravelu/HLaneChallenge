<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lingaraj.hourglass.in.hlanechallenge">

  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

  <application
      android:name=".HouseLaneApp"
      android:allowBackup="false"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/HLANETEHEME">
    <activity
        android:name=".activities.DisplayNotesActivity"
        android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>


    <activity android:name=".activities.NoteFullViewActivity"
        android:screenOrientation="portrait"/>
    <activity android:name=".activities.NewNoteActivity"
        android:screenOrientation="portrait"/>
  </application>

</manifest>